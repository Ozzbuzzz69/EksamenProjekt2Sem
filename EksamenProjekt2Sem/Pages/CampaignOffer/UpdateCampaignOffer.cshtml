@page "{id:int}"
@model EksamenProjekt2Sem.Pages.CampaignOffer.UpdateCampaignOfferModel
@{
}

<h1>Opdater Kampagne</h1>

<form method="post">
    <div class="form-group">
        <input asp-for="@Model.CampaignOffer.Id" class="form-control" readonly="@(true)" hidden />
    </div>
	<div class="form-group">
		<label asp-for="CampaignOffer.Name" class="control-lable">Navn på kampagne</label>
		<input asp-for="CampaignOffer.Name" class="form-control" />
		<span asp-validation-for="CampaignOffer.Name" class="text-danger"></span>
    </div>    
    <div class="form-group">
        <label asp-for="CampaignOffer.ImageLink" class="control-label">Link til kampagne</label>
        <input asp-for="CampaignOffer.ImageLink" class="form-control" />
        <span asp-validation-for="CampaignOffer.ImageLink" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CampaignOffer.Price" class="control-label">Pris</label>
        <input asp-for="CampaignOffer.Price" class="form-control" />
        <span asp-validation-for="CampaignOffer.Price" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group">
            <input type="submit" value="Opdater" class="btn btn-primary" />
        </div>
    </p>
</form>

<p>
	<a asp-page="/CampaignOffer/ReadAllCampaignOffers">Tilbage til oprettelse af kampagne</a>
</p>