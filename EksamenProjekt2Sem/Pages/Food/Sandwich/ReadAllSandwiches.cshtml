@page
@model EksamenProjekt2Sem.Pages.Food.Sandwich.ReadAllSandwichesModel
@{
}

<style>
    .food {
        background-color: whitesmoke;
        color: black;
        border: 2px solid black;
        margin: 20px;
        padding: 20px;
        width: 580px;
        float: left;
    }

    .filterbox {
        background-color: lightgrey;
        border: 1px solid black;
        padding: 10px;
        width: 280px;
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

        .filterbox div {
            display: flex;
        }

    .button {
        float: right;
    }

    body {
        background-image: url("/images/sandwich.png");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    footer {
        height: 0px;
        background-color: white;
    }

    .inputsize {
        width: 50px;
    }
</style>

<h1>Smørrebrødsudvalg</h1>
    <h4>Vælg ingredienser</h4>
    <div class="filterbox">
        <div>
            <input type="checkbox" id="meat1" />
            <label for="meat1">Fjerkræ</label><br />
        </div>
        <div>
            <input type="checkbox" id="meat2" />
            <label for="meat2">Okse</label><br />
        </div>
        <div>
            <input type="checkbox" id="meat3" />
            <label for="meat3">Fisk</label><br />
        </div>
        <div>
            <input type="checkbox" id="meat4" />
            <label for="meat4">Gris</label><br />
        </div>
    </div>

    <div class="food">
        <h3>Diverse</h3>
        @foreach (var sandwich in Model.Sandwiches)
        {
            <p>
                @sandwich.Ingredients, Pris: @sandwich.Price
            <input class="inputsize" type="number" value="0" id="input" />
            </p>
        }
    </div>

    <div class="food">
        <h3>Luksussmørrebrød</h3>
        @foreach (var sandwich in Model.Sandwiches)
        {
            <p>@sandwich.Ingredients, Pris: @sandwich.Price
            <input class="inputsize" type="number" value="0" id="input" />
            </p>
        }
    </div>

    <div class="food">
        <h3>Almindelig smørrebrød</h3>
        @foreach (var sandwich in Model.Sandwiches)
        {
            <p>@sandwich.Ingredients, Pris: @sandwich.Price
            <input class="inputsize" type="number" value="0" id="input" />
            </p>
        }
    </div>

    <div class="food">
        <h3>Signatur</h3>
        @foreach (var sandwich in Model.Sandwiches)
        {
            <p>@sandwich.Ingredients, Pris: @sandwich.Price
            <input class="inputsize" type="number" value="0" id="input" />
            </p>
        }
    </div>

    <div class="button">
        <input type="submit" value="Bekræft valg" class="btn btn-danger" />
    </div>